<section class="text-gray-400 bg-gray-900 body-font min-h-screen flex items-center justify-center">
  <div class="container px-5 py-24">
    <div class="lg:w-2/6 md:w-1/2 bg-gray-800 bg-opacity-50 rounded-lg p-8 flex flex-col md:m-auto w-full mt-10 md:mt-0">
      <h2 class="text-white text-lg font-medium title-font mb-5">Sign Up</h2>
      <%= form_for (:session) do |f| %>
        <div class="relative mb-4">
          <%= f.label :username, 'Enter your username', class: "leading-7 text-sm text-gray-400" %>
          <%= f.text_field :username, autocomplete: 'off', class: "w-full bg-gray-600 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-indigo-900 rounded border border-gray-100/10 focus:border-indigo-100/20 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
        </div>
        <%= f.submit 'Sign in', class: "text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg" %>
      <% end %>
    </div>
  </div>
</section>